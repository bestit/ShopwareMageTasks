{
    "name": "bestit/shopware-mage-tasks",
    "description": "Common tasks to deploy a shopware project using MagePHP",
    "keywords": ["Shopware", "MagePHP", "Deployment"],
    "license": "MIT",
    "authors": [
        {
            "name": "best it AG",
            "email": "info@bestit.de"
        }
    ],
    "require": {
        "php": "^7.4",
        "andres-montanez/magallanes": "^4.0",
        "league/flysystem": "^1.0"
    },
    "minimum-stability": "stable",
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "league/flysystem-memory": "^1.0.2",
        "vlucas/phpdotenv": "^5.2.0",
        "mikey179/vfsstream": "^1.6.8"
    },
    "suggest": {
        "b3nl/sw-migrations": "This library is needed if you want to use the task shopware/migrate"
    },
    "autoload": {
        "psr-4": {
            "BestIt\\Mage\\": "src/"
        },
        "files": [
            "src/Task/LegacyTasks.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "BestIt\\Mage\\": "tests/"
        }
    },
    "scripts": {
        "low-level-tests": [
            "phpcs -n",
            "phpunit"
        ]
    }
}
